# XSBH - Simple BIM Fragment Viewer 
version: '3.8' 
 
services: 
  xsbh-viewer: 
    build: . 
    container_name: xsbh-bim-viewer 
    ports: 
      - "8080:80" 
    volumes: 
      - ./data:/app/data 
      - ./user-fragments:/app/data/fragments 
    environment: 
      - NODE_ENV=production 
      - FRAGMENTS_DATA_DIR=/app/data 
    restart: unless-stopped 
    healthcheck: 
      test: ["CMD", "curl", "-f", "http://localhost:80/health"] 
      interval: 30s 
      timeout: 10s 
      retries: 3 
      start_period: 60s 
 
volumes: 
  user-fragments: 
    driver: local 
